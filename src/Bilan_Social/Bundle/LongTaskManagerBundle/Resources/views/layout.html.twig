	    {{ parent() }}
	    <script type="text/javascript" src="{{ asset('js/LongTaskManager/longTaskManager.js') }}"></script>

	{% endblock %}
	{% block stylesheets %}
	    {{ parent() }}
	    <link rel="stylesheet" type="text/css" href="{{ asset('css/longTaskManager.css') }}"/>

	{% endblock %}
	{% block header %}
	       {{ parent() }}

	{% endblock %}

	{% block body %}
	    {{parent()}}
	{% endblock %}
{% endif %}