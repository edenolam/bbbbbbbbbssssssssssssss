{% extends '@Core/layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/page.css') }}">
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="col-xs-9">
        <div>
            <ol class="breadcrumb">
                <li>Gestion des modèles de mail internes à l'application</li>
                <li class="active">Modification d'un modèle de mail interne à l'application.</li>
            </ol>
        </div>
        {% if app.session.flashBag.has('notice') %}
            <div class="alert alert-success fade in" role="alert">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {% for msg in app.session.flashBag.get('notice') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
        {% if app.session.flashBag.has('error') %}
            <div class="alert alert-danger fade in" role="alert">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {% for msg in app.session.flashBag.get('error') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
        <h3>Modèle du mail : {{ modelmailinterneappli.objet }}<a href="{{ path('modelmailinterneappli_index') }}"><button class="btn btn-default pull-right">Retour à la liste</button></a></h3>
        <hr>
        <div id="corps-mail">
            <div id="objet-mail" class="mail">
                <p><label>Objet</label> {{ modelmailinterneappli.objet }}</p>
            </div>
            <div id="contenu-mail" class="mail">
                {{ modelmailinterneappli.body|raw }}
            </div>
        </div>
    </div>
{% endblock %}
