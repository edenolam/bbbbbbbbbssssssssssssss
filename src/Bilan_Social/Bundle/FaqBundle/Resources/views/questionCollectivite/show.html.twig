{% extends '@Faq/layout.html.twig' %}


{% block body %}
    {{ parent() }}


    <div class="col-xs-9">
        <h1>Question</h1>

        <table>
            <tbody>
                <tr>
                    <th>Question</th>
                    <td>{{ question.question }}</td>
                </tr>
                <tr>
                    <th>Blcloturer</th>
                    <td>{% if question.blCloturer %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Id</th>
                    <td>{{ question.id }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('question_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('question_edit', { 'id': question.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
