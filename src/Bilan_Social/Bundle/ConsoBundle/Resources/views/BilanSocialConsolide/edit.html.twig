{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(".menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

{% endblock %}