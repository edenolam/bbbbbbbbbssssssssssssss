<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Poser une question</h4>
            </div>
            <div class="modal-body">
                <form role="form" method="POST" action="{{ path('faq_contact_client')}}">
                    <br style="clear:both">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" value="Create" />
                    {{ form_end(form) }}
                    <button type="submit" id="submit" name="submit" class="btn btn-primary pull-right">Envoyer</button>
                    <br style="clear:both">
                </form>
            </div>
        </div>
    </div>
</div>