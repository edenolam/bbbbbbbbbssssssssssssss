{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
<div class="col-lg-9" >
    <h1>Liste des natures MAJ</h1>
    <div class="clearfix">
        <a class="btn button pull-right margin10" href="{{ path('refnaturemaj_new') }}">Ajouter une donnée au référentiel</a>
        <a class="btn button pull-right margin10" href="{{ path('csv_export_refnaturemaj') }}">export csv</a>
        <a class="btn button margin10" href="{{ path('referenciel_homepage') }}">Retour à la liste des référentiels</a>
    </div>
    <table class="table table-striped" id="index">
        <thead>
            <tr>
                <th>Code</th>
                <th>Libellé</th>
                <th>Archivé</th>
                {% include '@Referenciel/indexListRefSharedFieldsTheadLayout.html.twig' %}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for refNatureMAJ in refNatureMAJs %}
            <tr>
                <td><a href="{{ path('refnaturemaj_show', { 'idNatureMAJ': refNatureMAJ.idNatureMAJ }) }}">{{ refNatureMAJ.cdStat }}</a></td>
                <td>{{ refNatureMAJ.lbNatureMAJ }}</td>
                <td>{% if refNatureMAJ.blVali %}Oui{% else %}Non{% endif %}</td>
                {% include '@Referenciel/indexListRefSharedFieldsTbodyLayout.html.twig' with {'ref':refNatureMAJ} %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('refnaturemaj_show', { 'idNatureMAJ': refNatureMAJ.idNatureMAJ }) }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('refnaturemaj_edit', { 'idNatureMAJ': refNatureMAJ.idNatureMAJ }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}