{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="col-lg-9" >
        <a class="btn button pull-right margin10" href="{{ path('refmotifabsence_index') }}">Retour à la liste</a>


        <table class="table table-striped"
               <tbody>
                <tr>
                    <th>Code</th>
                    <td>{{ refMotifAbsence.cdMotiabse }}</td>
                </tr>
                <tr>
                    <th>libellé</th>
                    <td>{{ refMotifAbsence.lbMotiabse }}</td>
                </tr>
                <tr>
                    <th>Absence compensatoire</th>
                    <td>{% if refMotifAbsence.blAbsecomp %}Oui{% else %}Non{% endif %}</td>
                </tr>
                <tr>
                    <th>Absence médicale</th>
                    <td>{% if refMotifAbsence.blAbsemedi %}Oui{% else %}Non{% endif %}</td>
                </tr>
                <tr>
                    <th>Autre raison d'absence</th>
                    <td>{% if refMotifAbsence.blAbseautrrais %}Oui{% else %}Non{% endif %}</td>
                </tr>
                <tr>
                    <th>Archivé</th>
                    <td>{% if refMotifAbsence.blVali %}Oui{% else %}Non{% endif %}</td>
                </tr>
                <tr>
                    <th>Code N4DS</th>
                    <td>{{ refMotifAbsence.cdMotiN4ds }}</td>
                </tr>
                {% include '@Referenciel/showRefSharedFieldsLayout.html.twig' with {'ref':refMotifAbsence} %}
            </tbody>
        </table>


        <a class="btn button pull-right margin10" href="{{ path('refmotifabsence_edit', { 'idMotiabse': refMotifAbsence.idMotiabse }) }}">Modifier</a>

        {{ form_start(delete_form) }}
        
        {{ form_end(delete_form) }}



    {% endblock %}


