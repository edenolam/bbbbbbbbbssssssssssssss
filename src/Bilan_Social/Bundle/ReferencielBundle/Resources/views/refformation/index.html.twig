{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="col-lg-9" >
        <h1>Liste des formations</h1>
        <div class="clearfix">
            <a class="btn button pull-right margin10" href="{{ path('refformation_new') }}">Ajouter une donnée au référentiel</a>
            <a class="btn button pull-right margin10" href="{{ path('csv_export_refformation') }}">export csv</a>
            <a class="btn button margin10" href="{{ path('referenciel_homepage') }}">Retour à la liste des référentiels</a>
        </div>
        <table class="table table-striped" id="index">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Libellé</th>
                        {#                    <th>Prévention</th>#}
                    <th>Archivé</th>
                    {% include '@Referenciel/indexListRefSharedFieldsTheadLayout.html.twig' %}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for refFormation in refFormations %}
                    <tr>
                        <td><a href="{{ path('refformation_show', { 'idForm': refFormation.idForm }) }}">{{ refFormation.cdForm }}</a></td>
                        <td>{{ refFormation.lbForm }}</td>
                        {#                <td>{% if refFormation.blPrev %}Oui{% else %}Non{% endif %}</td>#}
                        <td>{% if refFormation.blVali %}Oui{% else %}Non{% endif %}</td>
                        {% include '@Referenciel/indexListRefSharedFieldsTbodyLayout.html.twig' with {'ref':refFormation} %}
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('refformation_show', { 'idForm': refFormation.idForm }) }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                                </li>
                                <li>
                                    <a href="{{ path('refformation_edit', { 'idForm': refFormation.idForm }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


