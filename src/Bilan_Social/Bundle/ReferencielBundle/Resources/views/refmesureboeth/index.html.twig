{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="col-lg-9" >
        <h1> Listes des mesures d'inaptitude</h1>
        <div class="clearfix">
            <a class="btn button pull-right margin10" href="{{ path('refmesureboeth_new') }}">Ajouter une donnée au référentiel</a>
            <a class="btn button pull-right margin10" href="{{ path('csv_export_refmesureboeth') }}">export csv</a>
            <a class="btn button margin10" href="{{ path('referenciel_homepage') }}">Retour à la liste des référentiels</a>
        </div>
        <table class="table table-striped" id="index">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Libellé</th>
                    <th>Archivé</th>
                    {% include '@Referenciel/indexListRefSharedFieldsTheadLayout.html.twig' %}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for refMesureBoeth in refMesureBoeths %}
                    <tr>
                        <td><a href="{{ path('refmesureboeth_show', { 'idMesureboeth': refMesureBoeth.idMesureboeth }) }}">{{ refMesureBoeth.cdMesureboeth }}</a></td>
                        <td>{{ refMesureBoeth.lbMesureboeth }}</td>
                        <td>{% if refMesureBoeth.blVali %}Oui{% else %}Non{% endif %}</td>
                        {% include '@Referenciel/indexListRefSharedFieldsTbodyLayout.html.twig' with {'ref':refMesureBoeth} %}
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('refmesureboeth_show', { 'idMesureboeth': refMesureBoeth.idMesureboeth }) }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                                </li>
                                <li>
                                    <a href="{{ path('refmesureboeth_edit', { 'idMesureboeth': refMesureBoeth.idMesureboeth }) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
