{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="col-lg-9" >
        <h1>Liste des motifs de sanctions disciplinaires</h1>
        <div class="clearfix">
            <a class="btn button pull-right margin10" href="{{ path('refmotifsanctiondisciplinaire_new') }}">Ajouter une donnée au référentiel</a>
            <a class="btn button pull-right margin10" href="{{ path('csv_export_refmotifsanctiondisciplinaire') }}">export csv</a>
            <a class="btn button margin10" href="{{ path('referenciel_homepage') }}">Retour à la liste des référentiels</a>
        </div>
        <table class="table table-striped" id="index">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Libellé</th>
                    <th>Archivé</th>
                    {% include '@Referenciel/indexListRefSharedFieldsTheadLayout.html.twig' %}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for refMotifSanctionDisciplinaire in refMotifSanctionDisciplinaires %}
                    <tr>
                        <td><a href="{{ path('refmotifsanctiondisciplinaire_show', { 'idMotiSancdisc': refMotifSanctionDisciplinaire.idMotiSancdisc }) }}">{{ refMotifSanctionDisciplinaire.cdMotiSancdisc }}</a></td>
                        <td>{{ refMotifSanctionDisciplinaire.lbMotiSancdisc }}</td>
                        <td>{% if refMotifSanctionDisciplinaire.blVali %}Oui{% else %}Non{% endif %}</td>
                        {% include '@Referenciel/indexListRefSharedFieldsTbodyLayout.html.twig' with {'ref':refMotifSanctionDisciplinaire} %}
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('refmotifsanctiondisciplinaire_show', { 'idMotiSancdisc': refMotifSanctionDisciplinaire.idMotiSancdisc }) }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                                </li>
                                <li>
                                    <a href="{{ path('refmotifsanctiondisciplinaire_edit', { 'idMotiSancdisc': refMotifSanctionDisciplinaire.idMotiSancdisc }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

