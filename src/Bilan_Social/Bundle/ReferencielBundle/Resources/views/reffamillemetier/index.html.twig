{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
<div class="col-lg-9" >
    <h1>Liste des familles de métiers</h1>
    <div class="clearfix">
        <a class="btn button pull-right margin10" href="{{ path('reffamillemetier_new') }}">Ajouter une donnée au référentiel</a>
        <a class="btn button pull-right margin10" href="{{ path('csv_export_reffamillemetier') }}">export csv</a>
        <a class="btn button margin10" href="{{ path('referenciel_homepage') }}">Retour à la liste des référentiels</a>
    </div>
    <table class="table table-striped" id="index">
        <thead>
        <tr>
            <th>Code</th>
            <th>Libellé</th>
            <th>Domaine professionnel</th>
            <th>Archivé</th>
            {% include '@Referenciel/indexListRefSharedFieldsTheadLayout.html.twig' %}
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for refFamilleMetier in refFamilleMetiers %}
            <tr>
                <td><a href="{{ path('reffamillemetier_show', { 'idFamilleMetier': refFamilleMetier.idFamilleMetier }) }}">{{ refFamilleMetier.cdFamilleMetier }}</a></td>
                <td>{{ refFamilleMetier.lbFamilleMetier }}</td>
                <td>{{ refFamilleMetier.refDomaineProfessionnel.lbDomaineProfessionnel }}</td>
                <td>{% if refFamilleMetier.blVali %}Oui{% else %}Non{% endif %}</td>
                {% include '@Referenciel/indexListRefSharedFieldsTbodyLayout.html.twig' with {'ref':refFamilleMetier} %}

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reffamillemetier_show', { 'idFamilleMetier': refFamilleMetier.idFamilleMetier }) }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('reffamillemetier_edit', { 'idFamilleMetier': refFamilleMetier.idFamilleMetier }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}