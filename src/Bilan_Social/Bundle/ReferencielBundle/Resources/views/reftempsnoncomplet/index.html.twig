{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="col-lg-9" >
        <h1>Liste des temps non complet</h1>
        <div class="clearfix">
            <a class="btn button pull-right margin10" href="{{ path('reftempsnoncomplet_new') }}">Ajouter une donnée au référentiel</a>
            <a class="btn button pull-right margin10" href="{{ path('csv_export_reftempsnoncomplet') }}">export csv</a>
            <a class="btn button margin10" href="{{ path('referenciel_homepage') }}">Retour à la liste des référentiels</a>
        </div>
        <table class="table table-striped" id="index">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Libellé</th>
                    <th>Nombre minutes borne min</th>
                    <th>Nombre minutes borne max</th>
                    <th>Archivé</th>
                    {% include '@Referenciel/indexListRefSharedFieldsTheadLayout.html.twig' %}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for refTempsNonComplet in refTempsNonComplets %}
                    <tr>
                        <td><a href="{{ path('reftempsnoncomplet_show', { 'idTempnoncomp': refTempsNonComplet.idTempnoncomp }) }}">{{ refTempsNonComplet.cdTempnoncomp }}</a></td>
                        <td>{{ refTempsNonComplet.lbTempnoncomp }}</td>
                        <td>{{ refTempsNonComplet.nbMinuteBorneMin }}</td>
                        <td>{{ refTempsNonComplet.nbMinuteBorneMax }}</td>
                        <td>{% if refTempsNonComplet.blVali %}Oui{% else %}Non{% endif %}</td>
                        {% include '@Referenciel/indexListRefSharedFieldsTbodyLayout.html.twig' with {'ref':refTempsNonComplet} %}
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('reftempsnoncomplet_show', { 'idTempnoncomp': refTempsNonComplet.idTempnoncomp }) }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                                </li>
                                <li>
                                    <a href="{{ path('reftempsnoncomplet_edit', { 'idTempnoncomp': refTempsNonComplet.idTempnoncomp }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


