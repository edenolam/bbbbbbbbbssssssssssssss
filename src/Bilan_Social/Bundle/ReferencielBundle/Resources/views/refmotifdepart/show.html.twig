{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="col-lg-9" >
        <a class="btn button pull-right margin10" href="{{ path('refmotifdepart_index') }}">Retour à la liste</a>

        <table class="table table-striped"
               <tbody>
                <tr>
                    <th>Code</th>
                    <td>{{ refMotifDepart.cdMotidepa }}</td>
                </tr>
                <tr>
                    <th>Libellé</th>
                    <td>{{ refMotifDepart.lbMotidepa }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>
                        {% for statut in refMotifDepart.statutMotifDeparts %}
                            - {{ statut.lbStat }}
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Code N4DS</th>
                    <td>{{ refMotifDepart.cdMotiN4ds }}</td>
                </tr>
                <tr>
                    <th>Archivé</th>
                    <td>{% if refMotifDepart.blVali %}Oui{% else %}Non{% endif %}</td>
                </tr>
                {% include '@Referenciel/showRefSharedFieldsLayout.html.twig' with {'ref':refMotifDepart} %}
            </tbody>
        </table>


        <a class="btn button pull-right margin10" href="{{ path('refmotifdepart_edit', { 'idMotidepa': refMotifDepart.idMotidepa }) }}">Modifier</a>

        {{ form_start(delete_form) }}
        
        {{ form_end(delete_form) }}



        </ul>
    {% endblock %}

