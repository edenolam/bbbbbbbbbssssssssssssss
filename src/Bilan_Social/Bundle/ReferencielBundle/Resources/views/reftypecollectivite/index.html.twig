{% extends '@Referenciel/layout.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="col-lg-9" >
        <h1>Liste des types de collectivité</h1>
        <div class="clearfix">
            <a class="btn button pull-right margin10" href="{{ path('reftypecollectivite_new') }}">Ajouter une donnée au référentiel</a>
            <a class="btn button pull-right margin10" href="{{ path('csv_export_reftypecollectivite') }}">export csv</a>
            <a class="btn button margin10" href="{{ path('referenciel_homepage') }}">Retour à la liste des référentiels</a>
        </div>
        <table class="table table-striped" id="index">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Libellé</th>
                    <th>Archivé</th>
                    {% include '@Referenciel/indexListRefSharedFieldsTheadLayout.html.twig' %}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for refTypeCollectivite in refTypeCollectivites %}
                    <tr>
                        <td><a href="{{ path('reftypecollectivite_show', { 'idTypeColl': refTypeCollectivite.idTypeColl }) }}">{{ refTypeCollectivite.cdTypecoll }}</a></td>
                        <td>{{ refTypeCollectivite.lbTypeColl }}</td>
                        <td>{% if refTypeCollectivite.blVali %}Oui{% else %}Non{% endif %}</td>
                        {% include '@Referenciel/indexListRefSharedFieldsTbodyLayout.html.twig' with {'ref':refTypeCollectivite} %}
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('reftypecollectivite_show', { 'idTypeColl': refTypeCollectivite.idTypeColl }) }}"><i class="fa fa-search" aria-hidden="true"></i></a>
                                </li>
                                <li>
                                    <a href="{{ path('reftypecollectivite_edit', { 'idTypeColl': refTypeCollectivite.idTypeColl }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
